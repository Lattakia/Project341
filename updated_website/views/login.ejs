<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
    <title>Connect Concordia login.ejs</title>
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <style>
        body {
            padding-top: 10px;
        }

    </style>
</head>

<body>

    <style>
        body {
            background-image: url("concordia2.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }
        
        #top_bar {
            width: 100%;
            height: 150px;
            background-color: rgb(143, 37, 57);
            height: 150px;
        }
        
        #logo {
            z-index: 1000;
            position: relative;
            width: 300px;
            height: 150px;
        }
        
        h1 {
            text-align: center;
            font-family: Helvetica, sans-serif;
            color: rgb(255, 255, 255);
        }
        
        label {
            color: rgb(255, 255, 255);
            font-size: 120%;
            font-weight: bold;
        }
        
        input[type=text],
        input[type=password],
        select {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        
        span {
            text-align: center;
            display: inline-block;
        }
        
        p {
            margin: 0;
            padding: 0;
            color: rgb(255, 255, 255);
        }
        
        a {
            color: rgb(255, 255, 255);
        }
        
        .small_text {
            font-size: 17px;
        }
        
        #form_div {
            margin: auto;
            width: 100%;
            border-radius: 5px;
            padding: 10px;
        }
        
        #other_options {
            text-align: center;
        }

    </style>

    <div id="topbar">

        <img src="logo2.png" id="logo" alt="Logo">

    </div>


    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Sign in to Connect Concordia</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>


                    <div id="form_div">
                        <!-- LOGIN FORM -->
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>

                            <button type="submit" class="btn btn-warning btn-lg">Login</button>
                        </form>
                        <div>

                            <hr>
                            
                            <p>Need an account? <a href="/signup">Signup</a></p>
                            <p>Or go <a href="/">home</a>.</p>

                        </div>

                    </div>

        </div>
    </div>
</body>

</html>
